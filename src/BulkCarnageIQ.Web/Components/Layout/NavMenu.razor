    <MudNavLink Href="/MealTrackerReportMacro" Icon="@Icons.Material.Filled.PieChart">
        Report Macro
    </MudNavLink>

    <MudNavLink Href="/GroceryList" Icon="@Icons.Material.Filled.ShoppingBasket">
